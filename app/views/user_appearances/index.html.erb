<%= turbo_frame_tag(:user_appearances) do %>
  <%
    content_tag(:div, {
      id: "user_appearances",
      data: {
        controller: "user-appearances",
        user_appearances_appeared_class: "text-green-500",
        user_appearances_disappeared_class: "text-red-500"
      }
    }) do
  %>
  <h1 class="text-lg font-semibold">Users Online</h1>
  <br />
  <ul>
    <% @users.each do |user| %>
      <li>
        <%=
          content_tag(:span, {
            data:  {
              user_appearances_target: :status,
              user_id: user.id
            }
          }) do
        %>
        <%= "\u25CF" %>
        <% end %>
        <%= user.display_name %>
      </li>
    <% end %>
  </ul>
  <% end %>
<% end %>

